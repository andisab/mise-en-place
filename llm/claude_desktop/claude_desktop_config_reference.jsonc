// This invalid JSON file is for reference only!! 
// Copy the contents of this file into the claude_desktop_config_template.json file for MCP Servers that you would like to set up. 
// If you find something that works really well, feel free to add more MCP servers here to share with others in this format. 
// Note that some of these servers need to be set up manually with uv or docker. Check the uvx path with `which uvx` and docker path with `which docker`.
{
  "mcpServers": {
    "fetch": {
      "command": "${HOME}/.local/bin/uvx",
      "args": ["mcp-server-fetch"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@cyanheads/git-mcp-server"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT}"
      }
    },
    "excel": {
      "command": "npx",
      "args": ["--yes", "@negokaz/excel-mcp-server"],
      "env": {
        "EXCEL_MCP_PAGING_CELLS_LIMIT": "4000"
      }
    },
    "magic": {
      "command": "npx",
      "args": ["@21st-dev/magic"]
    },
    "exa": {
      "command": "npx",
      "args": ["-y", "exa-mcp-server"],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      }
    },
    "perplexity-mcp": {
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "PERPLEXITY_MODEL": "sonar"
      },
      "command": "${HOME}/.local/bin/uvx",
      "args": ["perplexity-mcp"]
    },
    "joplin": {
      "command": "${HOME}/.local/bin/uv",
      "args": [
        "--directory",
        "${HOME}/Projects/mcp_servers/joplin-mcp-server",
        "run",
        "src/mcp/joplin_mcp.py"
      ]
    },
    "markitdown": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        "${HOME}/Projects:/Projects",
        "markitdown-mcp:latest"
      ]
    },
    "llm-config": {
      "command": "npx",
      "args": ["-y", "@ablukis/llm-config-mcp"],
      "env": {
        "LLM_CONFIG_DRY_RUN": "false"
      }
    }
  }
}